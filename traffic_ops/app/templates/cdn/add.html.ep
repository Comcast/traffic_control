<!DOCTYPE html>
% if (defined (flash 'alertmsg')) {
<script> 
	var alertmsg = "<%= flash 'alertmsg' %>"; 
	alertmsg = alertmsg.replace(/__NEWLINE__/g, "\n");
	alert(alertmsg);

</script>
% }
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title><%= title %></title>
		<link type="text/css" href="/css/site.css" rel="stylesheet" />
		<script type="text/javascript" src="/js/application.js"></script>
		<script>
    		%= include 'cdn/cdn.js'
    		$(function () {
      			$(document).ready(function () {
					listcdns("NONE");
        			// Accordion
        			$("#accordion").accordion({
            			header: "h3",
            			autoHeight: false
        			});
      			});
    		});
    	</script>
	</head>

	<body>
		<div id="accordion"  class="add_cdn_popup">
    		<div class="dialog_body" style="margin-left:10px; height: 400px">
      			<h3><a href="#">Add CDN</a></h3>

					<div style="border: none; text-align:left; height: 80px; width: 100%;">
						%= include 'common/_errors'
						%= include 'common/_flash'
					</div>

					<div style="margin-left:10px;">
							%= form_for cdn_create => (id => 'cdnadd', action => '/cdn/create', method => "POST")  => begin 
						%= include 'cdn/_form'
						<div class="bottomButtons" style="margin-left: 285px;">
							 %= submit_button 'Add CDN', id => 'newcdn', class=> 'button'
							<button id="close_button" class="button">Close</button>
						</div>
					</div>
						% end
				</div>
			</div>
		</div>
	</body>
</html>
