% title 'CDNs';
% if (defined (flash 'alertmsg')) {
<script>
alert( "<%= flash 'alertmsg' %>" );
</script>

% }
<script>
var activeTable;
$(function () {
	$(document).ready(function () {
		
%= include 'jmenu'

		sTable = $('#dtlocations').dataTable({
			"bJQueryUI": true,
			"bProcessing": true,
			"sScrollY": calcDataTableHeight(),
			"bScrollCollapse": true,
			"bPaginate": false,
			"aaSorting": [[ 1, 'asc' ]], 
			"aoColumnDefs": [
			{
				"mRender": function (data, type, full) {
					% if ($priv_level >= 30) {
						return "<a class='fancybox fancybox.iframe' href='/cdn/edit/" + full[0] + "'>Edit</a>";
					% }
					% else {
						return "<a class='fancybox fancybox.iframe' href='/cdn/view/" + full[0] + "'>Details</a>";
					% }
					},
					"aTargets": [0]
				}],
				"sAjaxSource": "aadata/Cdn"
			});
		activeTable = sTable;
	})

	$("a.fancybox").fancybox({
		'easingIn'        : 'swing',
		'enableEscapeButton' : false,
		'centerOnScroll'  : true,
		'overlayOpacity'  : "0.3",
		'hideOnOverlayClick'  : false,
		'hideOnContentClick'  : false,
		'modal'           : 'true',
		'scrolling'       : 'none',
		'showActivity'    : false,
		'showTitle'       : false,
		'showCloseButton' : true,
		'showNavArrows'   : false,
		'speedIn'         : 400,
		'transitionIn'    : 'elastic',
		'transitionOut'   : 'elastic',
		'type'            : 'iframe',
		'iframe'          : {'scrolling'       : 'yes'},
		'height'          : '500px',
		'width'           : '670px'
		})
});
</script>
<body id="misc">
%= include 'navbar'
	<div class="ui-tab-float-right-on-table">CDNs</div>
		<div id="Misc">
			<table cellpadding="0" cellspacing="0" border="0" width="100%" class="display" id="dtlocations">
				<thead>
					<tr>
						<td></td>
						<td>Name</td>
						<td>Last Updated</td>
					</tr>
				</thead>
			</table>

			<div id="bottomButtons" class="bottomButtons">
						% if ($priv_level >= 30) {
						<a class='fancybox fancybox.iframe' href='/cdn/add'><button class='button'>Add CDN</button></a>
			% }
		     </div>
		</div>
	</body>
</html>
